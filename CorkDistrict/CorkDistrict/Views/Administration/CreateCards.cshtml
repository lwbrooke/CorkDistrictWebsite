@model CorkDistrict.ViewModels.CreateCardViewModel

@{
    ViewBag.Title = "CreateCards";
}

<h2>CreateCards</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />        
        @if (TempData["CrTCmessage"] != null) {<ul><li><span style="color:red">@TempData["CrTCmessage"]</span></li></ul>}
        
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount)
                @Html.ValidationMessageFor(model => model.Amount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsPromo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsPromo)
                @Html.ValidationMessageFor(model => model.IsPromo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PromoOwner, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PromoOwner)
                @Html.ValidationMessageFor(model => model.PromoOwner)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Menu", "Menu")
</div>
